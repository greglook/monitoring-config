# NGINX reverse-proxy configuration

#user  nobody;
worker_processes  2;

events {
  worker_connections  1024;
}

http {
  include       mime.types;
  default_type  application/octet-stream;

  # Logs
  access_log {{ nginx_log_dir }}/access.log combined;
  error_log  {{ nginx_log_dir }}/error.log;

  #log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
  #                  '$status $body_bytes_sent "$http_referer" '
  #                  '"$http_user_agent" "$http_x_forwarded_for"';

  server_tokens off;
  sendfile off;
  #tcp_nopush on;
  keepalive_timeout 65;
  gzip off;

  # Backend server
  upstream backend {
    server {{ nginx_backend_address }}:{{ nginx_backend_port }};
    keepalive 16;
  }

  # Redirect all HTTP requests to HTTPS
  server {
    listen 80;
    server_name {{ server_name }};
    return 301 https://{{ server_name }}$request_uri;
  }

  # Proxy backend on HTTPS port
  server {
    listen 443 ssl;
    server_name {{ server_name }};

    # TLS settings.
    ssl_prefer_server_ciphers on;
    ssl_protocols       {{ nginx_tls_protocols | join(' ') }};
    ssl_ciphers         {{ nginx_tls_ciphers | join(':') }};
    ssl_certificate     {{ tls_chained_cert_path }};
    ssl_certificate_key {{ tls_key_path }};
    ssl_session_cache   shared:SSL:50m;
    ssl_session_timeout 5m;

    location / {
      proxy_pass {{ nginx_backend_scheme }}://backend;
    }
  }
}
